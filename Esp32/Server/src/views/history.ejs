<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login Page</title>
    <link rel="stylesheet" href="./../styles.css">
</head>

<body>
    <div class="history-container">
        <h1>History of Device Activity</h1>

        <div class="date">
            <p><strong>Date:</strong> <span id="currentDate"></span></p>
        </div>

        <table>
            <thead>
                <tr>
                    <th>Device Name</th>
                    <th>Time</th>
                    <th>Metadata</th>
                </tr>
            </thead>
            <tbody id="historyTable">
                <tr>
                    <td>Buzzer</td>
                    <td>13:48</td>
                    <td>Test metadata for buzzer event</td>
                </tr>
                <tr>
                    <td>Distance Sensor</td>
                    <td>13:49</td>
                    <td>Test metadata for distance event</td>
                </tr>
                <tr>
                    <td>Infrared Sensor</td>
                    <td>13:50</td>
                    <td>Test metadata for infrared event</td>
                </tr>
            </tbody>
        </table>

        <div class="button-group">
            <a href="/cabinet" class="back-btn">Back to Cabinet</a>
        </div>
    </div>

    <script>
        const currentDate = new Date().toLocaleDateString();
        document.getElementById('currentDate').textContent = currentDate;
    </script>
</body>

</html>